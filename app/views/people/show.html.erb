<div class="starter-template">
  <h1><%= @person.full_name %> </h1>
</div>

<div class="row">
  <div class="panel panel-default people">
    <div class="panel-body">
      <%= image_tag @person.picture.mid.url, alt: @person.full_name, class: "img-circle people" %>
      <h3><%= "#{@person.job}, #{@person.age} years old"%></h3>
      <p><%= @person.bio %></p>
      <p><strong>Email:</strong> <%= @person.email %></p>
      <p><strong>Gender:</strong> <%= @person.gender %></p>
      <p><strong>Birthdate:</strong> <%= @person.birthdate.strftime("%-d %B %Y") %></p>
      <%= link_to edit_person_path(@person) do %>
        Edit
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
      <%= link_to @person, method: :delete, data: {confirm: 'Are you sure?'} do %>
        Remove
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <% end %>
      <%= link_to people_path do %>
        Back
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
      <% end %>
    </div>
  </div>
</div>




